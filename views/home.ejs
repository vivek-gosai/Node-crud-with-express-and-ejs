    <h1 style="text-align: center;">Hello world</h1>
    <h1>Fil the Form</h1>
    <a href="/form"
        style="text-decoration: none; color: black; padding: 2px 14px; background-color: azure; border: 1px solid black;">Fill</a>
   

    <div class="container">
        <div class="row">
            <% data.map((val)=>{%>
                <div class="cont">
                    <div class="product-card">
                        <div class="product-card__image">
                            <img src=""
                                alt="Red Nike Shoes">
                        </div>
                        <div class="product-card__info">
                            <h2 class="product-card__title"><%=val.name %></h2>
                            <p class="product-card__description"><%=val.feedback %></p>
                            <div class="product-card__price-row">
                                <span class="product-card__price"><%=val.category %></span>
                                <button class="product-card__btn"><a href="/editdata/<%=val.id%>" style="text-decoration: none; color: white;">Edit</a></button>
                                <button class="product-card__btn"><a href="/deletedata/<%=val.id%>" style="text-decoration: none; color: white;">Delete</a></button>
                                <button class="product-card__btn">Select</button>
                            </div>
                        </div>
                    </div>
                </div>
                <%})%>
        </div>
    </div>
</body>

</html>